<script type="text/template" id="addresto-template">
    <form role="form" action="/submitResto" method="post" id="addRestoForm">
        <div class="form-group">
            <label for="name">饭馆名 *</label>
            <input type="text" class="form-control" name="name" value="{{=resto? resto.get('name'):''}}" required  placeholder="法文名"> <br/>
            <input type="text" class="form-control" name="namecn" value="{{=resto? resto.get('namecn'):''}}" placeholder="中文名">
        </div>
        <div class="form-group">
            <label for="address">地址 *</label>
            <input type="text" class="form-control" name="address" value="{{=resto? resto.get('address'):''}}" placeholder="numéro, rue, avenue...." required>
        </div>
        <div class="form-group">
            <div class=""></div>
            <label for="postalCode">邮编 *</label>
            <input type="text" class="form-control" name="postalCode" pattern="\d*" maxlength="5" value="{{=resto? resto.get('postalCode'):'75000'}}" required>
        </div>
        <div class="form-group">
            <label for="city">城市 *</label>
            <input type="text" class="form-control" name="city" value="{{=resto? resto.get('city'):'Paris'}}" required>
        </div>
        <div class="form-group">
            <label for="telephone">电话</label>
            <input type="tel" class="form-control telephone" name="telephone" value="{{=resto? resto.get('telephone'):'01'}}">
        </div>
        <div class="form-group">
            <label>开门时间</label>
            <ul class="list-group">
                <div class="panel panel-default">
                    <div class="panel-body">
                        中午 -
                         <input type="text" pattern="\d*" size="1" name="opentimeNoonStartHour" value="{{=resto? resto.get('opentimeNoonStartHour'):'12'}}" style="text-align:right;" />
                         点<input type="text" pattern="\d*" size="1" name="opentimeNoonStartMin" value="{{=resto? resto.get('opentimeNoonStartMin'):'00'}}" >

                        到<input type="text" pattern="\d*" size="1" name="opentimeNoonEndHour" value="{{=resto? resto.get('opentimeNoonEndHour'):'15'}}" style="text-align:right;" />
                        点<input type="text" pattern="\d*" size="1" name="opentimeNoonEndMin" value="{{=resto? resto.get('opentimeNoonEndMin'):'00'}}" >

                        <br/><br/>
                        晚上 -
                        <input type="text" pattern="\d*" size="1" name="opentimeEveningStartHour" value="{{=resto? resto.get('opentimeEveningStartHour'):'19'}}" style="text-align:right;" />
                        点<input type="text" pattern="\d*" size="1" name="opentimeEveningStartMin" value="{{=resto? resto.get('opentimeEveningStartMin'):'00'}}" >

                        到<input type="text" pattern="\d*" size="1" name="opentimeEveningEndHour" value="{{=resto? resto.get('opentimeEveningEndHour'):'22'}}" style="text-align:right;" />
                        点<input type="text" pattern="\d*" size="1" name="opentimeEveningEndMin" value="{{=resto? resto.get('opentimeEveningEndMin'):'00'}}" >
                        <br/><br/>
                        特殊关门时间
                        <input type="text"  class="form-control" name="opentimeException" value="{{=resto? resto.get('opentimeException'):''}}" >

                    </div>
                </div>

            </ul>
        </div>
        <div class="form-group">
            <label>人均价格</label>
            <div class="panel panel-default">
                <div class="panel-body">
                    中午
                    <input type="text" pattern="\d*" size="1" maxlength="3" name="priceNoon" value="{{=resto? resto.get('priceNoon'):'10'}}" style="text-align:right;"> € <br/><br/>
                    晚上
                    <input type="text" pattern="\d*" size="1" maxlength="3" name="priceEvening" value="{{=resto? resto.get('priceEvening'):'20'}}" style="text-align:right;">  €<br/><br/>
                    价格说明
                    <input type="text" class="form-control" name="priceSpecial" value="{{=resto? resto.get('priceSpecial'):''}}">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h3 class="panel-title">推荐理由</h3>
                </div>
                <div class="panel-body">
                   <ul class="list-group">
                       <li class="list-group-item">理由1 <select id="recReasonList1" name="recReason1"><option value=""></option></select></li>
                       <li class="list-group-item">理由2 <select id="recReasonList2" name="recReason2"><option value=""></option></select></li>
                       <li class="list-group-item">理由3 <select id="recReasonList3" name="recReason3"><option value=""></option></select> </li>
                       <li class="list-group-item">特殊理由 <input type="text" class="form-control" name="recommandationReason" value="{{=resto? resto.get('recommandationReason'):''}}" /> </li>
                   </ul>

                </div>
            </div>


        </div>
        <div class="form-group">
            <label for="recommandationReason">标签 (用 ";" 号分开)</label>
            <input type="text" class="form-control" name="tags" value="{{=resto? resto.get('tags'):''}}" />
        </div>
        <div class="form-group">
               <a href="/a/restos" class="btn btn-default">返回</a> &nbsp; &nbsp;
               <input type="submit" id="submitResto" class="btn btn-primary" value="保存">
        </div>

    </form>
</script>